<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- JDBC Database connection settings -->

        <!--Deprecated!: <property name="connection.driver_class">com.mysql.jdbc.Driver</property>-->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- LOCAL MEDIASHARE DB PATH: -->
        <!--
        <property name="connection.url">jdbc:mysql://mediashare:3307/TimeTrackerAppDB?useLegacyDatetimeCode=false</property>
        -->
        <!-- LOCAL XAMPP DB Path:-->
        <property name="connection.url">jdbc:mysql://localhost:3306/TimeTrackerAppDB?useLegacyDatetimeCode=false</property>

        <property name="connection.username">user</property>
        <property name="connection.password">pw4us3r</property>

        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">20</property>

        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Echo the SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>

    </session-factory>

</hibernate-configuration>